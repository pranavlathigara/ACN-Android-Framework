<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="AcnImageView">
        <attr name="scaleType" format="enum">
            <enum name="fitCenter" value="0"/>
            <enum name="centerCrop" value="1"/>
            <enum name="fitXY" value="2"/>
        </attr>
        <attr name="gifSrc" format="string"/>
        <attr name="gifSize" format="dimension"/>
    </declare-styleable>

    <declare-styleable name="AcnViewPager">
        <attr name="indicatorColor" format="color"/>
        <attr name="dividerColor" format="color"/>
        <attr name="selectedTitleColor" format="color"/>
        <attr name="unselectedTitleColor" format="color"/>
        <attr name="tabBackgroundColor" format="color"/>
    </declare-styleable>

    <declare-styleable name="AcnImageGallery">
        <attr name="spacing" format="dimension"/>
        <attr name="columnType" format="enum">
            <enum name="pair" value="2"/>
            <enum name="triplet" value="3"/>
        </attr>
    </declare-styleable>

    <declare-styleable name="AcnImagePager">
        <attr name="selectedIndicatorColor" format="color"/>
        <attr name="unselectedIndicatorColor" format="color"/>
        <attr name="selectedIndicatorSize" format="dimension"/>
        <attr name="unselectedIndicatorSize" format="dimension"/>
        <attr name="indicatorBottomMargin" format="dimension"/>
    </declare-styleable>
</resources>