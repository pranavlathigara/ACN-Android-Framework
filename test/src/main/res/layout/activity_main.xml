<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fancy="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.accenture.android.test.MainActivity">

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:id="@+id/toolbar"
        android:gravity="center"
        android:background="@color/PrimaryDark">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="@string/app_name"
                android:textColor="@color/Primary"
                android:textSize="20sp" />

        </LinearLayout>

    </android.support.v7.widget.Toolbar>
    
    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="8dp">

        <LinearLayout
            android:id="@+id/container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center">

            <com.accenture.android.framework.view.AcnImageView
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_margin="10dp"
                app:scaleType="centerCrop"
                app:dotColor="@color/PrimaryDark"
                app:dotCount="4"
                app:dotRadius="10dp"
                android:gravity="center"
                android:id="@+id/acn_imageview" />

            <com.accenture.android.framework.view.AcnTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:gravity="center"
                android:text="AcnTextView {fa-globe}"
                android:textColor="@color/PrimaryDark"
                android:textSize="25sp" />

            <com.accenture.android.framework.view.AcnButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:paddingBottom="10dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:paddingTop="10dp"
                fancy:fb_borderColor="@color/Primary"
                fancy:fb_borderWidth="2dp"
                fancy:fb_defaultColor="@color/PrimaryDark"
                fancy:fb_focusColor="@color/Focus"
                fancy:fb_fontIconResource="&#xf17b;"
                fancy:fb_fontIconSize="25sp"
                fancy:fb_iconPosition="left"
                fancy:fb_radius="30dp"
                fancy:fb_text="AcnButton"
                fancy:fb_textSize="25sp"
                fancy:fb_textColor="@color/Primary"
                android:id="@+id/acn_button"/>

        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>

</LinearLayout>
