<?xml version="1.0" encoding="utf-8"?>
<manifest
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.accenture.android.test">

    <application
        android:name=".BaseApplication"
        tools:replace="theme, label"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AcnTheme">

        <activity android:name="com.accenture.android.test.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".ViewTestActivity">
        </activity>

        <activity android:name=".ZoomableImageActivity">
        </activity>

        <activity android:name=".ImageGalleryActivity">
        </activity>

    </application>

</manifest>
